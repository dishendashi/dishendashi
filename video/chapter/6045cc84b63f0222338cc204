            }
            else {
                if (data.reason == -5) {
                    bootstrap_alert.show('<span class="glyphicon glyphicon-user"/>&nbsp; 尚未登录，请先登录', 'warning', 6000);
                    $('#LoginRegiterModal').modal('show');
                    floweringId = id;
                }
