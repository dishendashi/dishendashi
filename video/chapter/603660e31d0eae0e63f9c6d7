var floweringId;
RunOnReady(function() {
    $('#loginform').on('login', function (event, usr) {
        $('#LoginRegiterModal').modal('hide');
        if (homagingId) {
            Homage(homagingId);
            delete homagingId;
        }
        if (floweringId) {
            Flower(floweringId);
            delete floweringId;
        }
        event.stopImmediatePropagation();
    });

    $.get('/counter/homage/602be5043daca3092c47affd', function(result) {
        if (result.success) {
            $('#homageNo').html(result.homage);
            $('#flowerNo').html(result.flower);
        }
    })
});

// var Homaged = false;
function Homage(id) {
    //var already_ = function () {
    //    bootstrap_alert.show('<span class="glyphicon glyphicon-info-sign"/>&nbsp;您已经顶礼过！', 'warning', 6000);
    //};
    //if (!Homaged) {
