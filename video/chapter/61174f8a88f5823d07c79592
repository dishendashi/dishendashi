var floweringId;
RunOnReady(function() {
    $('#loginform').on('login', function (event, usr) {
        $('#LoginRegiterModal').modal('hide');
        if (homagingId) {
            Homage(homagingId);
            delete homagingId;
        }
        if (floweringId) {
            Flower(floweringId);
            delete floweringId;
        }
        event.stopImmediatePropagation();
    });

    $.get('/counter/homage/5f8545bcdf5da1156cd24fb0', function(result) {
        if (result.success) {
            $('#homageNo').html(result.homage);
            $('#flowerNo').html(result.flower);
        }
    })
});

